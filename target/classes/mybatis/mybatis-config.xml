<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!-- 命名空间 -->
    <typeAliases>
        <typeAlias type="com.system.domain.User" alias="User"/>
        <typeAlias type="com.system.domain.MiniRequest" alias="MiniRequest"/>
        <typeAlias type="com.system.domain.User2" alias="User2"/>
        <typeAlias type="com.system.domain.Employee" alias="Employee"/>
        <typeAlias type="com.system.domain.Position" alias="Position"/>
        <typeAlias type="com.system.domain.Menu" alias="Menu"/>
        <typeAlias type="com.system.domain.Month" alias="Month"/>
    </typeAliases>

    <typeHandlers>
        <typeHandler handler="com.system.handler.LocalDateTimeHandler" javaType="org.joda.time.LocalDateTime"
                     jdbcType="DATE"/>
    </typeHandlers>
</configuration>